{
  "extends": "./tsconfig.json",
  "include": [
    "tests/**/*",
    "server/**/*",
    "shared/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"],
      "@/server/*": ["./server/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "@app/*": ["./app/*"]
    }
  }
}
